{
  "version": 2,
  "builds": [{ "src": "package.json", "use": "@vercel/redwood" }],
  "probes": [
    { "path": "/", "mustContain": "<div id=\"redwood-app\">" },
    { "path": "/api/hello", "mustContain": "{\"data\":\"hi\"}" },
    {
      "path": "/api/graphql",
      "method": "POST",
      "headers": { "Accept": "application/json" },
      "body": { "query": "{ redwood { version } }" },
      "mustContain": "0.25.0"
    }
  ],
  "projectSettings": {
    "nodeVersion": "16.x"
  }
}
