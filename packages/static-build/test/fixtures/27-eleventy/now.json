{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "zeroConfig": true }
    }
  ],
  "probes": [
    { "path": "/", "mustContain": "<h1>Latest 3 Posts</h1>" },
    { "path": "/about", "mustContain": "<h1>About Me</h1>" },
    { "path": "/posts", "mustContain": "<h1>Archive</h1>" },
    {
      "path": "/posts/firstpost",
      "mustContain": "<h1>This is my first post.</h1>"
    }
  ]
}
