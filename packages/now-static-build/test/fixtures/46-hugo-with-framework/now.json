{
  "builds": [
    {
      "use": "@vercel/static-build",
      "src": "config.toml",
      "config": {
        "zeroConfig": true,
        "framework": "hugo"
      }
    }
  ],
  "build": {
    "env": {
      "NOW_BUILDER_DEBUG": "1",
      "VERCEL_BUILDER_DEBUG": "1"
    }
  },
  "probes": [{ "path": "/", "mustContain": "My First Post" }]
}
