{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "buildCommand": "next build && next export",
        "outputDirectory": "out"
      }
    }
  ],
  "build": {
    "env": {
      "NOW_BUILDER_DEBUG": "1",
      "VERCEL_BUILDER_DEBUG": "1"
    }
  },
  "probes": [{ "path": "/", "mustContain": "hello world" }]
}
