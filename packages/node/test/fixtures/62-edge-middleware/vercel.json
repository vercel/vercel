{
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    {
      "src": "middleware.ts",
      "use": "@vercel/node",
      "config": { "middleware": true }
    }
  ],
  "probes": [
    {
      "path": "/api/edge.js",
      "mustContain": "RANDOMNESS_PLACEHOLDER:edge",
      "responseHeaders": {
        "x-got-middleware": "true"
      }
    },
    {
      "path": "/non-exist",
      "mustContain": "RANDOMNESS_PLACEHOLDER:middleware",
      "responseHeaders": {
        "x-got-middleware": "true"
      }
    }
  ]
}
