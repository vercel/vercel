{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": true,
    "lib": ["ES2020"],
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./types", "src/**/*"],
  "ts-node": {
    "swc": true // https://typestrong.org/ts-node/docs/swc/
  }
}
