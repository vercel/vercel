{
  "probes": [
    {
      "path": "/api/hello",
      "method": "POST",
      "body": {
        "name": "RANDOMNESS_PLACEHOLDER"
      },
      "mustContain": "{\"name\":\"RANDOMNESS_PLACEHOLDER\"}",
      "responseHeaders": {
        "content-type": "application/json"
      }
    },
    {
      "path": "/api/hello",
      "method": "GET",
      "mustContain": "Hello, World!"
    }
  ]
}
