{
  "version": 2,
  "builds": [{ "src": "package.json", "use": "@vercel/next" }],
  "probes": [
    {
      "path": "/",
      "mustContain": "Hi"
    },
    {
      "path": "/",
      "responseHeaders": {
        "x-now-cache": "HIT"
      }
    },
    {
      "path": "/non-existent",
      "mustContain": "page could not be found"
    },
    {
      "path": "/non-existent",
      "mustContain": "__next"
    },
    {
      "path": "/_errors/404",
      "mustContain": "__next"
    }
  ]
}
