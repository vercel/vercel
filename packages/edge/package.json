{
  "name": "@vercel/edge",
  "version": "0.0.3",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "test": "jest --env node --verbose --runInBand --bail",
    "test-unit": "yarn test",
    "typedoc": "typedoc && prettier --write docs/**/*.md"
  },
  "devDependencies": {
    "@edge-runtime/jest-environment": "1.1.0-beta.7",
    "@types/jest": "27.4.1",
    "ts-node": "8.9.1",
    "tsup": "6.1.2",
    "typedoc": "0.23.10",
    "typedoc-plugin-markdown": "3.13.4",
    "typescript": "4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": true,
        "isolatedModules": true
      }
    }
  }
}
