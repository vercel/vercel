{
  "version": 2,
  "builds": [{ "src": "package.json", "use": "@vercel/next" }],
  "probes": [
    {
      "path": "/",
      "status": 200,
      "mustContain": "index page"
    },
    {
      "path": "/another",
      "status": 200,
      "mustContain": "another page"
    },
    {
      "path": "/api/hello",
      "status": 200,
      "mustContain": "John Doe"
    },
    {
      "path": "/first",
      "status": 200,
      "mustContain": "Loading..."
    },
    {
      "path": "/_next/data/testing-build-id/ebay/first.json",
      "status": 200,
      "mustContain": "\"params\":"
    },
    {
      "path": "/_next/data/testing-build-id/ebay/first.json",
      "status": 200,
      "mustContain": "\"random\":"
    },
    {
      "delay": 2000
    },
    {
      "path": "/first",
      "status": 200,
      "mustContain": "store: ebay",
      "retries": 3,
      "retryDelay": 2000
    },
    {
      "path": "/first",
      "status": 200,
      "mustContain": "slug: first",
      "retries": 3,
      "retryDelay": 2000
    }
  ]
}
