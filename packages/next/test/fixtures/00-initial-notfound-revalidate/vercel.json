{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "probes": [
    {
      "path": "/",
      "status": 200,
      "mustContain": "index page",
      "retries": 3,
      "retryDelay": 5000
    },
    {
      "path": "/another",
      "status": 200,
      "mustContain": "another page",
      "retries": 3,
      "retryDelay": 5000
    },
    {
      "path": "/blog/first",
      "status": 200,
      "mustContain": "dynamic page",
      "retries": 3,
      "retryDelay": 5000
    }
  ]
}
