{
  "version": 2,
  "builds": [{ "src": "package.json", "use": "@vercel/next" }],
  "probes": [
    { "path": "/foo/", "status": 200, "mustContain": "foo page" },
    {
      "fetchOptions": { "redirect": "manual" },
      "path": "/foo",
      "status": 308,
      "responseHeaders": {
        "refresh": "/url=/foo/$/"
      }
    },
    {
      "path": "/non-existent",
      "status": 404,
      "mustContain": "oops 404"
    },
    {
      "path": "/non-existent/",
      "status": 404,
      "fetchOptions": { "redirect": "manual" },
      "mustContain": "oops 404"
    }
  ]
}
