{
  "version": 2,
  "builds": [{ "src": "package.json", "use": "@vercel/next" }],
  "probes": [
    {
      "path": "/",
      "mustContain": "Hi"
    },
    /* TODO: enable this again once all tests pass
    {
      "path": "/",
      "responseHeaders": {
        "x-vercel-cache": "HIT"
      }
    },
    */
    {
      "path": "/env",
      "mustContain": ".vercel.app"
    },
    {
      "path": "/non-existent",
      "mustContain": "custom 404!!"
    },
    {
      "path": "/non-existent",
      "mustContain": "__next"
    },
    {
      "path": "/non-existent",
      "status": 404
    },
    {
      "path": "/404",
      "status": 404
    }
  ]
}
