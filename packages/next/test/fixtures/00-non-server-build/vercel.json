{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "functions": {
          "pages/index.js": {
            "memory": 512,
            "maxDuration": 5
          },
          "pages/another.js": {
            "memory": 512,
            "maxDuration": 5
          },
          "pages/api/index.js": {
            "memory": 128,
            "maxDuration": 5
          },
          "pages/**/*.js": {
            "maxDuration": 5
          }
        }
      }
    }
  ],
  "probes": [
    {
      "path": "/",
      "status": 200,
      "mustContain": "index page"
    },
    {
      "path": "/static",
      "status": 200,
      "mustContain": "static page"
    },
    {
      "path": "/dynamic/first",
      "status": 200,
      "mustContain": "dynamic page"
    },
    {
      "path": "/_next/data/testing-build-id/dynamic/first.json",
      "status": 200,
      "mustContain": "hello\":\"world\""
    },
    {
      "path": "/_next/data/testing-build-id/dynamic/first.json",
      "status": 200,
      "mustContain": "slug\":\"first\""
    },
    {
      "path": "/fallback/first",
      "status": 200,
      "mustContain": "fallback page"
    },
    {
      "path": "/fallback/first",
      "status": 200,
      "mustContain": "first"
    },
    {
      "path": "/_next/data/testing-build-id/fallback/first.json",
      "status": 200,
      "mustContain": "hello\":\"world\""
    },
    {
      "path": "/_next/data/testing-build-id/fallback/first.json",
      "status": 200,
      "mustContain": "slug\":\"first\""
    },
    {
      "path": "/_next/data/testing-build-id/fallback/second.json",
      "status": 200,
      "mustContain": "hello\":\"world\""
    },
    {
      "path": "/_next/data/testing-build-id/fallback/second.json",
      "status": 200,
      "mustContain": "slug\":\"second\""
    },
    {
      "delay": 2000
    },
    {
      "path": "/fallback/second",
      "status": 200,
      "mustContain": "second",
      "retries": 3,
      "retryDelay": 2000
    },
    {
      "path": "/api",
      "status": 200,
      "mustContain": "page\":\"api/index.js\""
    },
    {
      "path": "/api",
      "status": 200,
      "mustContain": "memory\":\"128\""
    },
    {
      "path": "/api/another",
      "status": 200,
      "mustContain": "page\":\"api/another.js\""
    },
    {
      "path": "/api/blog/first",
      "status": 200,
      "mustContain": "page\":\"api/blog/[slug].js\""
    },
    {
      "path": "/api/blog/second",
      "status": 200,
      "mustContain": "slug\":\"second\""
    }
  ]
}
