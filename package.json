    "lint-staged": "^4.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.2"
  },
  "scripts": {
    "build": "babel src/ -d out/ && chmod +x out/now.js",
    "test": "eslint . && flow",
    "prepublish": "yarn run test && yarn run build",
    "lint:staged": "lint-staged",
    "dev": "yarn run build && ./out/now.js"
  },
  "pre-commit": "lint:staged",
  "lint-staged": {
    "*.js": [
      "eslint",
      "prettier --write --single-quote --no-semi",
      "git add"
    ]
  },
  "eslintIgnore": [
    "src/providers/sh/legacy/**",
    "out"
  ],
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "script"
    },
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "no-console": 0,
      "no-shadow": "error",
      "no-extra-semi": 0
    }
  },
  "babel": {
    "presets": [
      "flow"
    ]
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  }
}
