<script>
  const texts = {
    sk: {
      title:"Objednaj si vlastnú stránku",
      name:"Meno:",
      contact:"Email alebo telefón:",
      type:"Typ stránky (čo chceš vytvoriť):",
      typeOptions:["Landing Page","Predajná stránka","Link-in-bio stránka","Osobná mini stránka"],
      desc:"Popis (čo chceš na stránke):",
      descPlaceholder:"Napíš svoju predstavu...",
      pay:"Stripe / PayPal link (POVINNÉ):",
      note:"Záloha 20€ je povinná. Zvyšná cena sa doplatí po odovzdaní hotovej stránky.",
      checkbox:"Súhlasím s podmienkami zálohy 20€ a doplatkom po dokončení.",
      button:"KÚPIŤ / OBJEDNAŤ"
    },
    cs: {
      title:"Objednej si vlastní stránku",
      name:"Jméno:",
      contact:"Email nebo telefon:",
      type:"Typ stránky (co chceš vytvořit):",
      typeOptions:["Landing Page","Prodejní stránka","Link-in-bio stránka","Osobní mini stránka"],
      desc:"Popis (co chceš na stránce):",
      descPlaceholder:"Napiš svůj nápad...",
      pay:"Stripe / PayPal odkaz (POVINNÉ):",
      note:"Záloha 20€ je povinná. Zbývající cena se doplatí po dokončení stránky.",
      checkbox:"Souhlasím s podmínkami zálohy 20€ a doplatkem po dokončení.",
      button:"KUPIT / OBJEDNAT"
    },
    en: {
      title:"Order Your Own Website",
      name:"Name:",
      contact:"Email or phone:",
      type:"Website type (what do you want to create):",
      typeOptions:["Landing Page","Sales Page","Link-in-bio page","Personal mini page"],
      desc:"Description (what do you want on the page):",
      descPlaceholder:"Write your idea...",
      pay:"Stripe / PayPal link (REQUIRED):",
      note:"Deposit of 20€ is required. Remaining price is paid after website is delivered.",
      checkbox:"I agree with the deposit terms of 20€ and final payment upon completion.",
      button:"BUY / ORDER"
    },
    de: {
      title:"Bestelle deine eigene Webseite",
      name:"Name:",
      contact:"E-Mail oder Telefon:",
      type:"Seitentyp (was möchtest du erstellen):",
      typeOptions:["Landing Page","Verkaufsseite","Link-in-bio Seite","Persönliche Mini-Seite"],
      desc:"Beschreibung (was möchtest du auf der Seite haben):",
      descPlaceholder:"Schreibe deine Idee...",
      pay:"Stripe / PayPal Link (PFLICHT):",
      note:"Anzahlung von 20€ ist erforderlich. Restbetrag wird nach Fertigstellung gezahlt.",
      checkbox:"Ich stimme den Anzahlungbedingungen von 20€ und der Restzahlung nach Fertigstellung zu.",
      button:"KAUFEN / BESTELLEN"
    }
  };

  const langSelect = document.getElementById("language");
  const titleEl = document.getElementById("title");
  const labelName = document.getElementById("label-name");
  const labelContact = document.getElementById("label-contact");
  const labelType = document.getElementById("label-type");
  const typeSelect = document.getElementById("type");
  const labelDesc = document.getElementById("label-desc");
  const labelPay = document.getElementById("label-pay");
  const note = document.getElementById("note");
  const checkboxText = document.getElementById("checkbox-text");
  const btn = document.getElementById("btn-submit");

  function setLanguage(lang){
    titleEl.textContent = texts[lang].title;
    labelName.textContent = texts[lang].name;
    labelContact.textContent = texts[lang].contact;
    labelType.textContent = texts[lang].type;
    typeSelect.querySelectorAll("option").forEach((opt,i)=>{
      opt.textContent = texts[lang].typeOptions[i];
    });
    labelDesc.textContent = texts[lang].desc;

    const textarea = document.querySelector('textarea[name="popis"]');
    textarea.placeholder = texts[lang].descPlaceholder;

    labelPay.textContent = texts[lang].pay;
    note.textContent = texts[lang].note;
    checkboxText.textContent = texts[lang].checkbox;
    btn.textContent = texts[lang].button;
  }

  const browserLang = navigator.language.slice(0,2);
  langSelect.value = texts[browserLang] ? browserLang : 'sk';
  setLanguage(langSelect.value);
  langSelect.addEventListener("change", ()=>setLanguage(langSelect.value));
</script>

