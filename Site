    </div>
  </main>

  <script>
    const stripe = Stripe('SUA_CHAVE_PUBLISHABLE_DO_STRIPE'); // Coloque sua chave de teste do Stripe

    function comprar(produtoId) {
      fetch('https://seu-backend.com/create-checkout-session', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ produtoId: produtoId })
      })
      .then(res => res.json())
      .then(session => stripe.redirectToCheckout({ sessionId: session.id }))
      .catch(err => alert('Erro ao processar pagamento: ' + err.message));
    }
  </script>
