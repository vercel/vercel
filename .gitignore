function FilteredPage({ category }) {
  const uniqueItems = Array.from(new Map(devices.filter(d => d.categories.includes(category)).map(d => [d.label, d])).values());
  return <ImageGrid items={uniqueItems} />;
}

export default function App() {
  const [route, setRoute] = useState('home');
  useEffect(() => { document.title = 'موقع الأجهزة الخارجية — صور فقط'; }, []);

  return (
    <div className="min-h-screen bg-gray-100 font-sans">
      <Router route={route} setRoute={setRoute} />
      <div className="py-6">
        {route === 'home' && <HomePage />}
        {route === 'input' && <FilteredPage category='input' />}
        {route === 'output' && <FilteredPage category='output' />}
        {route === 'important' && <FilteredPage category='important' />}
        {route === 'peripherals' && <FilteredPage category='peripherals' />}
      </div>
    </div>
  );
}
