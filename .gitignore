import React, { useState, useEffect } from "react";

/*
  موقع تعليمي بصري لأجهزة الحاسوب الخارجية المهمة للاستخدام اليومي.
  - الصفحات: الرئيسية، أجهزة الإدخال، أجهزة الإخراج، الأجهزة الهامة، الأجهزة الطرفية.
  - المحتوى: صور تعليمية + اسم الجهاز.
  - يمكن فهرسته وعرضه في نتائج Google بشكل طبيعي عند نشره على الإنترنت.
*/

function Router({ route, setRoute }) {
  return (
    <nav className="w-full bg-white border-b px-4 py-3 flex items-center justify-between">
      <div className="flex items-center gap-4">
        <button onClick={() => setRoute("home")} className={`px-3 py-1 rounded ${route==='home'?'bg-indigo-600 text-white':''}`}>الرئيسية</button>
        <button onClick={() => setRoute("input")} className={`px-3 py-1 rounded ${route==='input'?'bg-indigo-600 text-white':''}`}>أجهزة الإدخال</button>
        <button onClick={() => setRoute("output")} className={`px-3 py-1 rounded ${route==='output'?'bg-indigo-600 text-white':''}`}>أجهزة الإخراج</button>
        <button onClick={() => setRoute("important")} className={`px-3 py-1 rounded ${route==='important'?'bg-indigo-600 text-white':''}`}>الأجهزة الهامة</button>
        <button onClick={() => setRoute("peripherals")} className={`px-3 py-1 rounded ${route==='peripherals'?'bg-indigo-600 text-white':''}`}>الأجهزة الطرفية</button>
      </div>
      <div className="text-sm text-gray-500">عرض صور الأجهزة مع تصنيف كل جهاز حسب وظيفته</div>
    </nav>
  );
}

function ImageGrid({ items }) {
  return (
    <div className="p-6 max-w-6xl mx-auto text-right">
      <div className="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6">
        {items.map((it, idx) => (
          <figure key={idx} className="flex flex-col items-center">
            <img src={it.src} alt={it.label} className="w-full h-40 object-contain border rounded bg-white p-2" />
            <figcaption className="mt-2 text-sm font-medium">{it.label}</figcaption>
          </figure>
        ))}
      </div>
    </div>
  );
}

function HomePage() {
  return (
    <div className="p-6 max-w-4xl mx-auto text-right">
      <h2 className="text-2xl font-bold mb-4">موقع الأجهزة الخارجية للحاسوب</h2>
      <img src="https://via.placeholder.com/800x400?text=Computer+Devices" alt="Computer Devices" className="w-full rounded mb-4" />
      <p className="text-sm text-gray-600 mb-4">هذا الموقع يهدف لتعليم المستخدم عن الأجهزة الخارجية الهامة للحاسوب المستخدمة في الاستعمال اليومي.</p>
      <ul className="list-disc list-inside text-sm text-gray-700">
        <li>أجهزة الإدخال: الفأرة، لوحة المفاتيح، الماسح الضوئي، كاميرا الويب، لوحة اللمس، قلم الرسم، فلاش USB.</li>
        <li>أجهزة الإخراج: الشاشة، الطابعة، مكبرات الصوت، سماعات الرأس، بروجيكتور، فلاش USB.</li>
        <li>الأجهزة الهامة: الفأرة، لوحة المفاتيح، الشاشة، الوحدة المركزية.</li>
        <li>الأجهزة الطرفية تشمل قارئ البطاقات، محولات USB، البروجيكتور، الماسح الضوئي، قلم الرسم، لوحة اللمس، كاميرا الويب.</li>
      </ul>
    </div>
  );
}

