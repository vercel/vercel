  { label: 'الماسح الضوئي (Scanner)', src: 'https://via.placeholder.com/400x250?text=Scanner', categories: ['input'] },
  { label: 'كاميرا الويب (Webcam)', src: 'https://via.placeholder.com/400x250?text=Webcam', categories: ['input'] },
  { label: 'لوحة اللمس (Touchpad)', src: 'https://via.placeholder.com/400x250?text=Touchpad', categories: ['input'] },
  { label: 'قلم الرسم (Stylus)', src: 'https://via.placeholder.com/400x250?text=Stylus', categories: ['input'] },
  { label: 'فلاش USB (USB Flash)', src: 'https://via.placeholder.com/400x250?text=USB+Flash', categories: ['input', 'output'] },
  { label: 'الشاشة (Monitor)', src: 'https://via.placeholder.com/400x250?text=Monitor', categories: ['output', 'important'] },
  { label: 'الطابعة (Printer)', src: 'https://via.placeholder.com/400x250?text=Printer', categories: ['output', 'peripherals'] },
  { label: 'مكبرات الصوت (Speakers)', src: 'https://via.placeholder.com/400x250?text=Speakers', categories: ['output', 'peripherals'] },
  { label: 'سماعات الرأس (Headphones)', src: 'https://via.placeholder.com/400x250?text=Headphones', categories: ['output', 'peripherals'] },
  { label: 'البروجيكتور (Projector)', src: 'https://via.placeholder.com/400x250?text=Projector', categories: ['output', 'peripherals'] },
  { label: 'الفأرة (Mouse)', src: 'https://via.placeholder.com/400x250?text=Mouse', categories: ['important'] },
  { label: 'لوحة المفاتيح (Keyboard)', src: 'https://via.placeholder.com/400x250?text=Keyboard', categories: ['important'] },
  { label: 'الشاشة (Monitor)', src: 'https://via.placeholder.com/400x250?text=Monitor', categories: ['important'] },
  { label: 'الوحدة المركزية (CPU Unit)', src: 'https://via.placeholder.com/400x250?text=CPU+Unit', categories: ['important'] },
  { label: 'قارئ البطاقات (Card Reader)', src: 'https://via.placeholder.com/400x250?text=Card+Reader', categories: ['peripherals'] },
